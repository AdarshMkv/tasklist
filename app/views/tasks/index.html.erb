<p style="color: green"><%= notice %>
  <style>table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
</style>
</p>

<h1>Tasks</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Task name</th>
      <th>Status</th>
      <th>Due date</th>
      <th>Assigned To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  
  <tbody>
<div id="tasks">
  <div id="users">
    <% @tasks.each do |task| %>
      <tr>
        <% value={} %>
        <% User.all.each {|x| value[x.id] = x.first_name}%>
        <td><%= task.taskname %></td>
        <td><%= task.status %></td>
        <td><%= task.duedate %></td>
        <td><%= value[task.user_id] %></td>
        <td><%= link_to "Show", task %></td>
      </tr>
    <% end %>
  </div>
</div>
</tbody>
</table>

<br>

<%= link_to 'Export CSV', tasks_path(format: :csv), :class =>  'btn btn-light' %>
<br>
<%= link_to "New task", new_task_path %>